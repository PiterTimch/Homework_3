<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="800">
    <Grid>
        <TextBox Name="ChatMessages" VerticalScrollBarVisibility="Auto" IsReadOnly="True"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="300" Margin="10"/>
        <TextBox Name="MessageInput" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="40" Margin="10,0,10,50"/>

        <StackPanel Orientation="Horizontal">
            <Button Name="SendButton" Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom"
            Width="100" Height="40" Margin="0,0,10,10" Click="SendButton_Click"/>

            <Button Name="reloginBT" Content="Relogin" HorizontalAlignment="Right" VerticalAlignment="Bottom"
            Width="100" Height="40" Margin="0,0,10,10" Click="reloginBT_Click"/>
        </StackPanel>
    </Grid>
</Window>
